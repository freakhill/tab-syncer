{
  "manifest_version": 3,
  "name": "Tab Syncer",
  "version": "1.0",
  "description": "Sync tabs with a Supabase database.",
  "permissions": ["tabs", "sessions", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "/dist/background.js",
    "scripts": ["/dist/background.js"],
    "persistent": true
  },
  "action": {
    "default_popup": "/dist/popup.html",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "64": "icon.svg",
      "128": "icon.svg"
    }
  },
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "64": "icon.svg",
    "128": "icon.svg"
  },
  "options_ui": {
    "page": "/dist/options.html",
    "open_in_tab": true
  }
}
